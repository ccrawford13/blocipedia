.container
  .row
    .col-md-3
      - if premium_or_admin(current_user)
        %h3 Collaborators
        = render @collaborators
    .col-md-6
      %h1= markdown_to_html @wiki.title
      %p= markdown_to_html @wiki.body
      - if policy(@wiki).update?
        = link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success'
